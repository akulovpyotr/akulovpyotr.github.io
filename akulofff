function func1() { 
document.getElementById("otvet1").innerHTML = ""; 
a = Number(document.getElementById("a_f1_znach").value); 
b = Number(document.getElementById("b_f1_znach").value); 
var s = 0 
var i =0; 

while (a <= b){ 
s=s+a; 
document.getElementById("otvet1").innerHTML = document.getElementById("otvet1").innerHTML + a +" "+s + "<br> "; 
i++; 
a++; 
} 

document.getElementById("otvet1").innerHTML = document.getElementById("otvet1").innerHTML +s/i + "<br> "; 

} 


